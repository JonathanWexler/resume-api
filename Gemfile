source "http://rubygems.org"

# Sinatra framework
gem 'sinatra'
# Extra Sinatra extensions to use
gem 'sinatra-contrib'
# Thin server to run the app
gem 'thin'
# Postgres DB
gem 'pg'
# to enable cross-origin requests to the API
gem "sinatra-cross_origin"
# For ruby DB calls
gem 'activerecord'
# Connection between ActiveRecord and Sinatra
gem 'sinatra-activerecord'
# Encryption
gem 'bcrypt-ruby'
# for json parsing and response
gem 'json'
# for migrations
gem 'rake'